<Window x:Class="RZM_MVVM_.View.EditKategorieWidow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RZM_MVVM_.View"
        mc:Ignorable="d"
        Title="EditKategorieWidow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Name"
                Margin="5"
                FontSize="20"/>
            <TextBox Text="{Binding ShowKategori.Name}"
                    Margin="5"
                    FontSize="20"/>
            <Label Content="Beschreibung"
                Margin="5"
                FontSize="20"/>
            <TextBox Text="{Binding ShowKategori.Beschreibung}"
                    Margin="5"
                    FontSize="20"/>
            <Button Content="speichern"
                 Command="{Binding StoraKategorie}" Margin="5"/>
            <Button Content="löschen"
                 Command="{Binding DeleteKategorie}" Margin="5"/>

        </StackPanel>
    </Grid>
</Window>
