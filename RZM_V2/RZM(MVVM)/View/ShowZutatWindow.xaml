<Window x:Class="RZM_MVVM_.View.ShowZutatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RZM_MVVM_.View"
        mc:Ignorable="d"
        Title="ShowZutatWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Grid>
                <Label Content="Zutat"
                   Margin="10" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding EditZutat.Name}" />
                <Button Content="Bearbeiten" Command="{Binding EditZutatCommand}" Margin=" 10" 
                        Width="100" HorizontalAlignment="right" Height="30"/>
            </Grid>
            <Label Content="Menge:" 
                   Margin=" 10" FontSize="15" FontWeight="Bold"/>
            <TextBlock Text="{Binding EditZutat.Menge}" />
            <Label Content="Einheit:"
                   Margin=" 10" FontSize="15" FontWeight="Bold"/>
            <TextBlock Text="{Binding EditZutat.Einheit}" />
            <Label Content="Allergene:"
                   Margin=" 10" FontSize="15" FontWeight="Bold"/>
            <TextBlock Text="{Binding AllergenList, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Kategorie:"
                   Margin=" 10" FontSize="15" FontWeight="Bold"/>
            <TextBlock Text="{Binding KategorieList, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Energie:"
                   Margin=" 10" FontSize="15" FontWeight="Bold"/> 
            <TextBlock Text="{Binding EditZutat.EnergieKcal}" />

        </StackPanel>
    </Grid>
</Window>
