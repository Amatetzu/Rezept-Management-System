<Window x:Class="RZM_MVVM_.View.AddZutatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RZM_MVVM_.View"
        mc:Ignorable="d"
        Title="AddZutatWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Zutat" />
            <TextBox Text="{Binding EditZutat.Name}" />
            <Label Content="Menge" />
            <TextBox Text="{Binding EditZutat.Menge}" />
            <Label Content="Einheit" />
            <TextBox Text="{Binding EditZutat.Einheit}" />
            <Label Content="Allergene"/>
            <TextBox Text="{Binding AllergenList, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Kategorie"/>
            <TextBox Text="{Binding KategorieList, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Energie"/>
            <TextBox Text="{Binding EditZutat.EnergieKcal}" />
            <Button Content="Speichern" Command="{Binding UpdateZutatCommand}" Margin=" 5" />
            <Button Content="Löschen" Command="{Binding DeleteZutatCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
