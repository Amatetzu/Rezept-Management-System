<Window x:Class="RZM_MVVM_.View.ShowCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RZM_MVVM_.View"
        mc:Ignorable="d"
        Title="ShowCategoryWindow" Height="450" Width="800">
    <Grid>


        <StackPanel>

            <TextBlock Text="Kategorien"
                       FontSize="30" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <ListView ItemsSource="{Binding ShowRezepts}"
                      Height="300" Width="500"/>
            <Button Content="test"
                    Command="{Binding TestCommand}"
                    Margin="10"
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Stretch"/>
        </StackPanel>
        
    </Grid>
</Window>
